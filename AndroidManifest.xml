<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rayhuo.todolist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.rayhuo.todolist.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rayhuo.todolist.AddIssue"
            android:label="@string/title_activity_add_issue" >
        </activity>
        <activity
            android:name="com.rayhuo.todolist.MDatabase"
            android:label="@string/title_activity_mdatabase" >
        </activity>
        <activity
            android:name="com.rayhuo.todolist.ItemIssue"
            android:label="@string/title_activity_item_issue" >
        </activity>
        <activity
            android:name="com.rayhuo.todolist.EditIssue"
            android:label="@string/title_activity_edit_issue" >
        </activity>
    </application>

</manifest>
